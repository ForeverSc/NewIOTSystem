<Window x:Class="NewIOTSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="700" Width="1000">
    <Window.Resources>
        <ResourceDictionary>
            <Style x:Key="quickbutton" TargetType="Button">
                <Setter Property="Width" Value="30"></Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="157*"/>
            <RowDefinition Height="45*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0"></Menu>
        <ToolBar Grid.Row="1">
            <Button Style="{StaticResource quickbutton}" Click="Button_Click">
                <Image Source="/Icons/112_LeftArrowLong_Blue.ico" ></Image>
            </Button>
            <Button Style="{StaticResource quickbutton}" Click="Button_Click_1">
                <Image Source="/Icons/112_RightArrowLong_Blue.ico" ></Image>
            </Button>
            <Button Style="{StaticResource quickbutton}">
                <Image ></Image>
            </Button>

            <Button Style="{StaticResource quickbutton}">
                <Image ></Image>
            </Button>

        </ToolBar>
        <ScrollViewer Grid.Row="3" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
        <Canvas  Name="canvas" Width="1000" Height="1000" />
        </ScrollViewer>
        
    </Grid>
</Window>
